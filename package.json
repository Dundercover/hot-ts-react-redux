{
  "name": "hot-ts-react-redux",
  "version": "1.0.0",
  "description": "Opinionated Hot React+Typescript+Redux with Parcel",
  "repository": {
    "type": "git",
    "url": "https://github.com/collingreen/hot-ts-react-redux-parcel"
  },
  "author": "Collin Green",
  "license": "MIT",
  "main": "src/index.tsx",
  "scripts": {
    "start": "parcel ./src/index.html --port 3000 --open",
    "build": "yarn run type-check && parcel build ./src/index.html --public-url '/'",
    "prettify": "cross-env prettier --write './src/**/*.{ts,tsx}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run prettify",
      "post-checkout": "yarn install"
    }
  },
  "engines": {
    "node": ">= 8.11.0",
    "npm": ">= 6.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/set-up-tests.ts"
    ],
    "moduleNameMapper": {
      ".+\\.css$": "<rootDir>/src/style-mock.ts"
    },
    "testMatch": [
      "**/__tests__/*.(test|spec).(ts|tsx|js)"
    ]
  },
  "keywords": [
    "Typescript",
    "React",
    "Parcel"
  ],
  "dependencies": {
    "@testing-library/react": "^8.0.4",
    "@types/react-redux": "^7.1.1",
    "@types/webpack-env": "^1.13.9",
    "helpful-decorators": "^2.0.4",
    "husky": "^3.0.0",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-hot-loader": "^4.12.1",
    "react-redux": "^7.1.0",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-saga": "^1.0.5",
    "redux-starter-kit": "^0.5.1",
    "redux-thunk": "^2.3.0",
    "styled-components": "^4.3.2"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^1.1.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.12",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/styled-components": "^4.1.16",
    "babel-plugin-styled-components": "^1.10.6",
    "cross-env": "^5.2.0",
    "jest": "^24.8.0",
    "jest-dom": "^3.5.0",
    "jest-extended": "^0.11.1",
    "parcel-bundler": "^1.12.3",
    "react-test-renderer": "^16.8.6",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.2"
  }
}
